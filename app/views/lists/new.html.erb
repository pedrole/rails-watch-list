<div class="container py-5">
  <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new List</h3>
          <%= simple_form_for(@list) do |f| %>
              <%= f.input :name %>
              <%= f.input :photo, as: :file %>
              <%= f.submit class: 'btn btn-primary' %>
          <% end %>
        </div>
    </div>
  </div>

</div>
