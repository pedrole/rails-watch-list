<div class="banner" style="background-color: blue;">
  <div class="container">
    <h1><%= @list.name %></h1>

  </div>
</div>
<div class="container">
  <%= link_to "Add a movie",  new_list_bookmark_path(@list), class: 'btn btn-success mt-3' %>
  <div class="row mt-3">
      <% @list.movies.each do |movie| %>
      <div class="col-4">
        <div class="card-trip">
          <img src= '<%= movie.poster_url %>' />
          <div class="card-trip-infos">
            <div>
              <h2><%= movie.title %></h2>
              <p><%= movie.overview %></p>
            </div>
            <h2 class="card-trip-pricing"><%= movie.rating %></h2>

          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>
