
<div class="container mt-5">

  <div class="d-flex justify-content-between align-items-start">
    <h1>My Lists</h1>
    <%= link_to "Create Movie List", new_list_path, class:'btn btn-primary'  %>



    </div>
    <div class="row">
    <% @lists.each do |item| %>
      <div class="col-4">

      <%= link_to list_path(item), class: 'text-decoration-none'  do  %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path item.photo.key, height: 300, crop: :thumb %>')">
              <%= item.name %>
          </div>
           <% end %>
      </div>

    <% end %>

  </div>
</div>
